<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Page3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="374dp"
                    android:layout_height="287dp"
                    android:layout_gravity="center"
                    android:background="@color/colorAccent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/image"
                        android:layout_width="298dp"
                        android:layout_height="287dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/tuto3" />

                </LinearLayout>

                <TextView
                    android:id="@+id/titrePage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:text="Type d’alarme "
                    android:textStyle="bold"
                    android:textColor="@color/couleurNoir"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/contenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="22dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="- Position allongée : appareil  allongé pendant 120 secondes => alarme \n
- Position immobile : appareil immobile pendant 120 secondes => alarme \n
- « Homme Mort » : toutes les 30 minutes => alarme"
                    android:textColor="@color/colorDarkGrey"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:text="@string/IZSR"
                    android:textColor="@color/couleurRouge2"
                    android:gravity="center"
                    android:textAlignment="textStart"
                    android:textSize="16sp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</FrameLayout>
